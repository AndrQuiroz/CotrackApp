<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/content_main"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@mipmap/ic_laucher2"
  android:paddingTop="@dimen/activity_vertical_margin"
  android:paddingBottom="@dimen/activity_vertical_margin"
  android:paddingLeft="@dimen/activity_horizontal_margin"
  android:paddingRight="@dimen/activity_horizontal_margin"

  app:layout_behavior="@string/appbar_scrolling_view_behavior"
  tools:context="com.cotrack.servicegps.MainActivity"
  tools:showIn="@layout/activity_main">


  <TextView
    android:id="@+id/tv_lat_long"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/tv_altitude"
    android:layout_centerHorizontal="true"
    android:textColor = "@color/colorPrimario"
    android:text=""
    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
    android:textSize="22sp"/>

  <TextView
    android:id="@+id/tv_altitude"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/tv_accuracy"
    android:layout_centerHorizontal="true"
    android:textColor = "@color/colorPrimario"
    android:text=""
    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
    android:textSize="22sp"
    />
  <TextView
    android:id="@+id/tv_accuracy"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_centerInParent="true"
    android:layout_centerHorizontal="true"
    android:textColor = "@color/colorPrimario"
    android:text=""
    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
    android:textSize="22sp"/>
                                                                                                                                                              "/>
  <Button
    android:id="@+id/boton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="false"
    android:text="@string/boton"/>
  <Button
    android:id="@+id/button_start"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"

    android:text="@string/main_start"/>
  <Button
    android:id="@+id/contactos"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="false"
    android:layout_alignParentRight="true"
    android:text="@string/contactos"/>
</RelativeLayout>
